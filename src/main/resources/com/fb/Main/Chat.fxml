<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="84.0" prefWidth="348.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fb.Main.ChatController">
   <children>
      <Label prefHeight="68.0" prefWidth="274.0" style="-fx-border-color: #CBC3E3; -fx-border-radius: 15; -fx-border-width: 2;">
         <graphic>
            <HBox alignment="CENTER" prefHeight="64.0" prefWidth="271.0" spacing="10.0">
               <children>
                  <ImageView fitHeight="50.0" fitWidth="92.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../Images/friendsIcon.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="chatLabel" prefHeight="50.0" prefWidth="88.0" text="Chat" textAlignment="RIGHT" textFill="#e3dedeed">
                     <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#OpenChat" prefHeight="30.0" prefWidth="91.0" style="-fx-background-color: transparent; -fx-border-color: #6958a4; -fx-border-radius: 15;" text="Open Chat" textFill="#8f5cc6">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <effect>
                        <DropShadow />
                     </effect>
                  </Button>
               </children>
            </HBox>
         </graphic>
      </Label>
   </children>
   <padding>
      <Insets left="7.0" />
   </padding>
</HBox>
